<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidproject.androidproject.Calculator"
    android:background="#e2fdf6">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backcalculator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2b0707"
        android:textColor="#fafdfe"
        android:textSize="20dp"
        android:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="#0a4d06"
        android:textSize="30dp"
        android:background="#22e94d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backcalculator"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/capture"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Root"
        android:id="@+id/result"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignTop="@+id/capture"
        android:layout_toRightOf="@+id/capture"
        android:layout_toEndOf="@+id/capture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:id="@+id/log"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignTop="@+id/result"
        android:layout_toRightOf="@+id/result"
        android:layout_toEndOf="@+id/result" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/sub"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_above="@+id/capture"
        android:layout_toLeftOf="@+id/log"
        android:layout_toStartOf="@+id/log" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:id="@+id/mul"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_above="@+id/log"
        android:layout_toRightOf="@+id/sub"
        android:layout_toEndOf="@+id/sub" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/add"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_above="@+id/capture"
        android:layout_toLeftOf="@+id/result"
        android:layout_toStartOf="@+id/result" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/power"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_below="@+id/add"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIV"
        android:id="@+id/div"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignTop="@+id/mul"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:hint="First Number"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:hint="Second Number"
        android:layout_below="@+id/first"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin"
        android:id="@+id/sin"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_above="@+id/sub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cos"
        android:id="@+id/cos"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignTop="@+id/sin"
        android:layout_toRightOf="@+id/add"
        android:layout_toEndOf="@+id/add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tan"
        android:id="@+id/tan"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_alignBottom="@+id/cos"
        android:layout_toRightOf="@+id/cos"
        android:layout_toEndOf="@+id/cos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exp"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#040541"
        android:layout_above="@+id/mul"
        android:layout_toRightOf="@+id/mul"
        android:layout_toEndOf="@+id/mul"
        android:text="Exp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:hint="Result"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/tan"
        android:layout_alignEnd="@+id/tan"
        android:textColor="#780f0f"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="4dp" />

</RelativeLayout>
