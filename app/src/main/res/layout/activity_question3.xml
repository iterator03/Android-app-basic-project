<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidproject.androidproject.Question5"
    android:background="#bebfb1"
    android:padding="10dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp">

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="BIOS"
            android:id="@+id/radioButton5"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:background="#701049"
            android:shadowColor="#111a2f"
            android:textStyle="normal|italic"
            android:textColor="#56f4a0"
            android:textSize="30dp"
            android:layout_marginBottom="12dp" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SuSe"
            android:id="@+id/radioButton6"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:background="#701049"
            android:shadowColor="#111a2f"
            android:textStyle="normal|italic"
            android:textColor="#56f4a0"
            android:textSize="30dp"
            android:layout_marginBottom="12dp" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DOS"
            android:id="@+id/radioButton7"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:background="#701049"
            android:shadowColor="#111a2f"
            android:textStyle="normal|italic"
            android:textColor="#56f4a0"
            android:textSize="30dp"
            android:layout_marginBottom="12dp" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Android"
            android:id="@+id/radioButton8"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:background="#701049"
            android:shadowColor="#111a2f"
            android:textStyle="normal|italic"
            android:textColor="#56f4a0"
            android:textSize="30dp"
            android:layout_marginBottom="12dp" />
    </RadioGroup>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#180606"
        android:textColor="#f8fcfa"
        android:padding="4dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:background="#09221f"
        android:textColor="#e8f4ec" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="5dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:padding="15dp"
        android:text="Which of the following is not an Operating System?"
        android:background="#144423" />
</RelativeLayout>
